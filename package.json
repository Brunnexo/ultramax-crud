{
  "build": {
    "productName": "Ultramax",
    "appId": "com.app.ultramax",
    "win": {
      "target": "nsis",
      "files": [
        "!src/**/*"
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "name": "crud-ultramax",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "watch": "tsc -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Bruno Costa",
  "license": "ISC",
  "devDependencies": {
    "electron-builder": "^22.10.5",
    "typescript": "^4.2.3",
    "electron": "^12.0.2"
  }
}